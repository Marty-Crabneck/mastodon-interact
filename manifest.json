{
	"name": "Mastodon interact",
	"description": "Easy share, star or follow for Mastodon",
	"version": "1.1",
	"manifest_version": 3,
	"icons": {
		"16": "/images/icon16.png",
		"32": "/images/icon32.png",
		"48": "/images/icon48.png",
		"128": "/images/icon128.png"
	},
	"permissions": [
		"storage",
		"activeTab",
		"scripting"
	],
	"options_page": "options.html",
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_title": "Go to your mastodon home",
		"default_icon": {
			"16": "/images/icon16.png",
			"32": "/images/icon32.png",
			"48": "/images/icon48.png",
			"128": "/images/icon128.png"
		}
	},
	"content_scripts": [
		{
			"matches": ["*://*/interact/*"],
			"js": ["content.js"]
		}
	]
}
